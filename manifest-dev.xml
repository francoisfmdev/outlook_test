<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  <Id>9f2c5b29-0a64-4f0f-9a1a-2a6b3f5a7b31</Id>
  <Version>1.0.1.3</Version>
  <ProviderName>Dev</ProviderName>
  <DefaultLocale>fr-FR</DefaultLocale>
  <DisplayName DefaultValue="Outlook Test (DEV)"/>
  <Description DefaultValue="Bouton test DEV"/>
  <IconUrl DefaultValue="https://cdn.jsdelivr.net/gh/francoisfmdev/outlook_test@main/icons/icon32.png"/>
  <HighResolutionIconUrl DefaultValue="https://cdn.jsdelivr.net/gh/francoisfmdev/outlook_test@main/icons/icon80.png"/>

  <FormSettings>
    <Form xsi:type="ItemRead"/>
    <Form xsi:type="ItemEdit"/>
  </FormSettings>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts><Host Name="Mailbox"/></Hosts>
    <Requirements>
      <Sets DefaultMinVersion="1.3"><Set Name="Mailbox"/></Sets>
    </Requirements>

    <Resources>
      <Urls>
        <Url id="functionsJs" DefaultValue="https://cdn.jsdelivr.net/gh/francoisfmdev/outlook_test@main/functions.js"/>
      </Urls>
      <Images>
        <Image id="icon16" DefaultValue="https://cdn.jsdelivr.net/gh/francoisfmdev/outlook_test@main/icons/icon16.png"/>
        <Image id="icon32" DefaultValue="https://cdn.jsdelivr.net/gh/francoisfmdev/outlook_test@main/icons/icon32.png"/>
        <Image id="icon80" DefaultValue="https://cdn.jsdelivr.net/gh/francoisfmdev/outlook_test@main/icons/icon80.png"/>
      </Images>
      <ShortStrings>
        <String id="btnLabel" DefaultValue="Test"/>
        <String id="groupLabel" DefaultValue="Add-in DEV"/>
      </ShortStrings>
      <LongStrings>
        <String id="btnDesc" DefaultValue="Affiche une notification pour valider le chargement."/>
      </LongStrings>
    </Resources>

    <Extensions>
      <Extension Point="MessageReadCommandSurface">
        <OfficeTab id="TabDefault">
          <Group id="grpRead" label="groupLabel" icon="icon32">
            <Control xsi:type="Button" id="btnRead" label="btnLabel" tooltip="btnDesc" icon="icon32" onAction="onTestButtonClick">
              <Action xsi:type="ExecuteFunction"><FunctionName>onTestButtonClick</FunctionName></Action>
            </Control>
          </Group>
        </OfficeTab>
        <FunctionFile resid="functionsJs"/>
      </Extension>

      <Extension Point="MessageComposeCommandSurface">
        <OfficeTab id="TabDefault">
          <Group id="grpCompose" label="groupLabel" icon="icon32">
            <Control xsi:type="Button" id="btnCompose" label="btnLabel" tooltip="btnDesc" icon="icon32" onAction="onTestButtonClick">
              <Action xsi:type="ExecuteFunction"><FunctionName>onTestButtonClick</FunctionName></Action>
            </Control>
          </Group>
        </OfficeTab>
        <FunctionFile resid="functionsJs"/>
      </Extension>
    </Extensions>
  </VersionOverrides>
</OfficeApp>
