<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  <Id>e3b5a6b1-6c0f-4d22-9d0a-111122223333</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Dev</ProviderName>
  <DefaultLocale>fr-FR</DefaultLocale>
  <DisplayName DefaultValue="Outlook Test (DEV)"/>
  <Description DefaultValue="Add-in DEV chargé depuis GitHub Pages"/>
  <IconUrl DefaultValue="https://<USER>.github.io/outlook-test/icons/32.png"/>
  <HighResolutionIconUrl DefaultValue="https://<USER>.github.io/outlook-test/icons/80.png"/>

  <!-- Rendez l'add-in dispo en lecture & rédaction de message -->
  <FormSettings>
    <Form xsi:type="ItemRead"/>
    <Form xsi:type="ItemEdit"/>
  </FormSettings>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message"/>
  </Rule>

  <!-- Add-in Commands -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts><Host Name="Mailbox"/></Hosts>

    <Requirements>
      <Sets DefaultMinVersion="1.3">
        <Set Name="Mailbox"/>
      </Sets>
    </Requirements>

    <Resources>
      <Urls>
        <Url id="functionsJs" DefaultValue="https://<USER>.github.io/outlook-test/functions.js"/>
      </Urls>
      <Images>
        <Image id="icon16" DefaultValue="https://<USER>.github.io/outlook-test/icons/16.png"/>
        <Image id="icon32" DefaultValue="https://<USER>.github.io/outlook-test/icons/32.png"/>
        <Image id="icon80" DefaultValue="https://<USER>.github.io/outlook-test/icons/80.png"/>
      </Images>
      <ShortStrings>
        <String id="btnLabel" DefaultValue="Test"/>
        <String id="groupLabel" DefaultValue="Add-in DEV"/>
      </ShortStrings>
      <LongStrings>
        <String id="btnDesc" DefaultValue="Affiche un message pour valider le chargement (DEV)."/>
      </LongStrings>
    </Resources>

    <Extensions>
      <!-- Ruban en lecture -->
      <Extension Point="MessageReadCommandSurface">
        <OfficeTab id="TabDefault">
          <Group id="grpRead" label="groupLabel" icon="icon32">
            <Control xsi:type="Button" id="btnRead"
                     label="btnLabel" tooltip="btnDesc"
                     icon="icon32" onAction="onTestButtonClick" enabled="true">
              <Action xsi:type="ExecuteFunction">
                <FunctionName>onTestButtonClick</FunctionName>
              </Action>
            </Control>
          </Group>
        </OfficeTab>
        <FunctionFile resid="functionsJs"/>
      </Extension>

      <!-- Ruban en rédaction -->
      <Extension Point="MessageComposeCommandSurface">
        <OfficeTab id="TabDefault">
          <Group id="grpCompose" label="groupLabel" icon="icon32">
            <Control xsi:type="Button" id="btnCompose"
                     label="btnLabel" tooltip="btnDesc"
                     icon="icon32" onAction="onTestButtonClick" enabled="true">
              <Action xsi:type="ExecuteFunction">
                <FunctionName>onTestButtonClick</FunctionName>
              </Action>
            </Control>
          </Group>
        </OfficeTab>
        <FunctionFile resid="functionsJs"/>
      </Extension>
    </Extensions>
  </VersionOverrides>
</OfficeApp>
